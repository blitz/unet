# -*- Mode: Python -*-

fbsd_env = Environment(CFLAGS = '-g -O1 -fno-strict-aliasing -nostdinc -ffreestanding -std=c99 ',
                       CPPPATH = ['#compat-freebsd/include-override', '#compat-freebsd/include', '#compat-freebsd/common'],
                       CPPDEFINES = ['_KERNEL', '__FreeBSD__']
                       )

# Debugging

Program('kmod-info', ['kmod-info.c'],
        CFLAGS    = '-g -std=c99 ',
        LIBS = ['fbsd_common'],
        LIBPATH = ['common'],
        LINKFLAGS = ' -ldl ')

# Subdirectories

SConscript(dirs = ['common', 'em'],
           exports = ['fbsd_env'])

# EOF

# -*- Mode: Python -*-

Import('fbsd_env')

em_base = '#contrib/freebsd/sys/dev/e1000/'

# We don't include legacy support
em_srcs = 'if_em.c e1000_api.c e1000_phy.c e1000_nvm.c e1000_mac.c '   + \
    'e1000_manage.c e1000_vf.c e1000_mbx.c e1000_i210.c '              + \
    'e1000_80003es2lan.c e1000_ich8lan.c e1000_82571.c e1000_82575.c ' + \
    'e1000_82540.c e1000_82542.c e1000_82541.c e1000_82543.c '         + \
    'e1000_osdep.c'

em_env = fbsd_env.Clone()
em_env.Append(CPPPATH = [em_base])

em_objs = []
for s in em_srcs.split():
    o = em_env.SharedObject(em_base + s)
    # These headers are autogenerated and need explicit dependencies
    Depends(o, Glob('../common/*.h'))
    em_objs += o

em_env.SharedLibrary('if_em', em_objs, LIBPATH='../common', LIBS = ['fbsd_common'])

# EOF
